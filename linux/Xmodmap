! Turn CapsLock into Control for ergonomics, and LeftControl into additional Hyper-modifier.

clear      lock 
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5

keycode      66 = Control_L
keycode      37 = Hyper_L

add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
add        mod5 = Mode_switch

! Map "|<>" key from Finnish keylayout 
! Ty http://jkpl.lepovirta.org/altfin.html !
keycode 94 = adiaeresis odiaeresis Adiaeresis Odiaeresis
